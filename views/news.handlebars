
<div class="container">
  <h1><Strong>Latest Articles</Strong></h1>
  
</div>


{{!-- Display scrape articles here --}}

{{#each articles}}
<div class="container">
    <button  data-id="{{this._id}}" type="button" class="save btn btn-info">Save</button>
    <button class="accordion"><strong>{{this.Headline}}</strong></button>
      <div class="panel">
        <h6><strong>Summary:</strong> {{this.Summary}}</h6>
        <h6><strong>URL:</strong> vietcetera.com/en{{this.URL}}</h6>
      </div>
</div>
 {{/each}}

{{!-- Accordion CSS --}}
 <style>
.accordion {
  background-color: rgba(54, 54, 54, 0.829);
  color: rgb(255, 255, 255);
  cursor: pointer;
  padding: 18px;
  width: 100%;
  border: none;
  border-radius: 8px;
  text-align: left;
  outline: none;
  font-size: 20px;
  transition: 0.4s;
  margin: auto 15px;
}

.active, .accordion:hover {
  background-color: chocolate; 
}

.panel {
  padding: 0 18px;
  display: none;
  background-color:  rgba(255, 255, 255, 0.829);
  overflow: hidden;
  width: 100%;
  border-radius: 8px;
  margin-left: 15px;
}
</style>

{{!-- Accordion Javascript --}}
<script>
var acc = document.getElementsByClassName("accordion");
var i;

for (i = 0; i < acc.length; i++) {
  acc[i].addEventListener("click", function() {
    this.classList.toggle("active");
    var panel = this.nextElementSibling;
    if (panel.style.display === "block") {
      panel.style.display = "none";
    } else {
      panel.style.display = "block";
    }
  });
}
</script>
